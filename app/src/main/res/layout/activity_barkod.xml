<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Barkod.Barkod">


    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone" />

    <TextView
        android:id="@+id/txtBarcodeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="No Barcode Detected"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/headercolor"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="• heskodkontrol.com •"
            android:textColor="#FFFF"
            android:textSize="30sp">

        </TextView>
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone"></WebView>

    <LinearLayout
        android:id="@+id/hesview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginBottom="50dp"
        android:background="#FFFF"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="40dp">


        <EditText
            android:id="@+id/hescode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"


            android:hint="HES Kodu"
            android:maxLength="12"
            >

        </EditText>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard"
            android:onClick="_openKeyboard">

        </Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/hesview"
        android:background="#FFF"
        android:src="@drawable/qr2"
        android:visibility="visible"></ImageView>

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/barkod"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginRight="100dp"
            android:onClick="_clickBarkod"

            android:src="@drawable/barkod"></ImageView>

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:onClick="_clickCamera"
            android:src="@drawable/camera"></ImageView>

        <Button
            android:id="@+id/btnexit"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/headercolor"
            android:onClick="_signOut"
            android:text="Oturumu Kapat"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:visibility="gone">

        </Button>
    </LinearLayout>

</RelativeLayout>